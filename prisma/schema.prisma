// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  password String
  role     String
}

model Sensor {
  id                Int              @id @default(autoincrement())
  tipo              String
  edificioTipo      String
  activo            Boolean?         @default(false)
  EspacioVerde      EspacioVerde?    @relation(fields: [espacioVerdeId], references: [id])
  espacioVerdeId    Int?
  Edificio          Edificio?        @relation(fields: [edificioId], references: [id])
  edificioId        Int?
  Aula              Aula?            @relation(fields: [aulaId], references: [id])
  aulaId            Int?
  Parking           Parking?         @relation(fields: [parkingId], references: [id])
  parkingId         Int?
  Estacionamiento   Estacionamiento? @relation(fields: [estacionamientoId], references: [id])
  estacionamientoId Int?
}

model Historial {
  id           Int      @id @default(autoincrement())
  sensorTipo   String
  edificioTipo String
  fecha        DateTime
  descripcion  String

  EspacioVerde      EspacioVerde?    @relation(fields: [espacioVerdeId], references: [id])
  espacioVerdeId    Int?
  Edificio          Edificio?        @relation(fields: [edificioId], references: [id])
  edificioId        Int?
  Aula              Aula?            @relation(fields: [aulaId], references: [id])
  aulaId            Int?
  Parking           Parking?         @relation(fields: [parkingId], references: [id])
  parkingId         Int?
  Estacionamiento   Estacionamiento? @relation(fields: [estacionamientoId], references: [id])
  estacionamientoId Int?
}

model EspacioVerde {
  id          Int      @id @default(autoincrement())
  nombre      String   @unique
  tipo        String
  sensores    Sensor[]
  luces       Boolean?
  pastoRegado Boolean?

  historial Historial[]
}

model Edificio {
  id       Int      @id @default(autoincrement())
  nombre   String   @unique
  tipo     String
  sensores Sensor[]
  aulas    Aula[]
  luces    Boolean?
  puertas  Boolean?

  historial Historial[]
}

model Aula {
  id       Int      @id @default(autoincrement())
  nombre   String   @unique
  tipo     String
  sensores Sensor[]
  lugar    Edificio @relation(fields: [lugarId], references: [id])
  lugarId  Int
  luces    Boolean?
  puertas  Boolean?
  cortinas Boolean?

  historial Historial[]
}

model Parking {
  id               Int               @id @default(autoincrement())
  nombre           String            @unique
  tipo             String
  sensores         Sensor[]
  estacionamientos Estacionamiento[]
  luces            Boolean?

  historial Historial[]
}

model Estacionamiento {
  id       Int      @id @default(autoincrement())
  nombre   String   @unique
  tipo     String
  sensores Sensor[]
  lugar    Parking  @relation(fields: [lugarId], references: [id])
  lugarId  Int
  libre    Boolean?

  historial Historial[]
}
